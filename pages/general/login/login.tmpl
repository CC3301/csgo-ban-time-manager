<main>
  <style media="screen">
    .login-form {
      padding: 10px;
      margin: 10px;
    }
    .login-form input {
      margin: 5px;
    }
    #status-section {
      background-color: #504945;
    }
  </style>
  <div class="section">
    <form class="login-form" action="index.pl" method="post">
      <input type="hidden" name="action" value="confirm-login">

      <label for="username">Username</label>
      <input type="username" name="username" id="username">
      </br>
      <label for="password">Password</label>
      <input type="password" name="password" id="password">
      </br>
      <input type="submit" value="Log in">

    </form>
    <div class="section" id="status-section">
      <span><TMPL_VAR NAME=MSG></span>
    </div>
  </div>
</main>
